{
  "name": "storefront-backend",
  "version": "1.0.0",
  "description": "Backend API for a storefront",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon src/index.ts",
    "migrate:up": "SET ENV=test && db-migrate db:create storefront_db_test && db-migrate up --config database.json -e test",
    "migrate:down": "db-migrate db:drop storefront_db_test",
    "docker:up": "docker-compose --env-file .env up -d",
    "docker:connect": "docker exec -it storefrontbackend_postgres_1 bash"
  },
  "author": "Beshoy Hani",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/typescript": "^2.0.0",
    "jasmine": "^4.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1"
  }
}
