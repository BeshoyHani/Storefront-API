{
  "name": "storefront-backend",
  "version": "1.0.0",
  "description": "Backend API for a storefront",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon src/index.ts",
    "prettier": "npx prettier src --write",
    "lint": "npx eslint src --fix",
    "format": "npm run prettier && npm run lint",
    "migrate:up:test": "SET ENV=test&& db-migrate db:create storefront_db_test && db-migrate up -e test",
    "migrate:down:test": "db-migrate db:drop storefront_db_test",
    "migrate:up": "db-migrate up",
    "migrate:down": "db-migrate down",
    "test": "SET ENV=test&& yarn build && yarn migrate:up:test && jasmine && yarn migrate:down:test",
    "docker:up": "docker-compose --env-file .env up -d",
    "docker:connect": "docker exec -it storefrontbackend_postgres_1 bash"
  },
  "author": "Beshoy Hani",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslinter": "^3.2.1",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1"
  }
}